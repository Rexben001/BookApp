<?xml version="1.0" encoding="utf-8"?>
<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.rexben.bookapp.Main4Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/who_should"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginTop="10dp"
            android:text="@string/who_should_name_a_child"
            android:textSize="20sp"
            android:id="@+id/textView8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="next_four"
            android:textAllCaps="false"
            android:text=" Back to Table of Content"
            android:layout_below="@id/textView8"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="previous_three"
            android:text="@string/previous_article"
            android:textAllCaps="false"
            android:layout_below="@id/textView8"
            android:layout_marginTop="90dp"
            />

    </RelativeLayout>

</ScrollView>